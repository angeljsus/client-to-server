*
	box-sizing border-box
body
	margin 0
	padding 0
	width 100vw
	height 100vh
	border 1px solid green
	.main-container
		width 100%
		height 100%
		.container-option
			width 250px
			height 100px
			display flex
			justify-content center
			align-items center
			.option-btn
				width 100px
				height 50px
				border none
				background #94d2bd
				color white
				font-weight bold
				&:hover
					color gray
					background #ee9b00
					user-select none